<ResourceDictionary
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <!--
    ApplyToDerivedTypes: true - faz com que seja aplicado em todos
    code-behind que herdam da classe ContentPage
  -->
  <Style ApplyToDerivedTypes="True" TargetType="ContentPage">
    <Setter Property="Padding" Value="20, 10" />
    <Setter
      Property="BackgroundColor"
      Value="{AppThemeBinding Light={StaticResource PAGE_BACKGROUND_COLOR_LIGHT}, Dark={StaticResource PAGE_BACKGROUND_COLOR_DARK}}" />
  </Style>
</ResourceDictionary>