<ResourceDictionary
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:constants="clr-namespace:PlanShare.App.Constants">

  <Style TargetType="Button">
    <Setter Property="CornerRadius" Value="15" />
    <Setter Property="FontFamily" Value="{x:Static constants:FontFamily.MainFontBlack}" />
    <Setter Property="FontSize" Value="18" />
    <Setter Property="HeightRequest" Value="50" />
    <!--Podemos usar o AppThemeBinding alÃ©m de cores para imagens e textos-->
    <Setter
      Property="BackgroundColor"
      Value="{AppThemeBinding Dark={StaticResource PRIMARY_COLOR_DARK}, Light={StaticResource PRIMARY_COLOR_LIGHT}}" />
    <Setter
      Property="TextColor"
      Value="{AppThemeBinding Dark={StaticResource SECONDARY_COLOR_DARK}, Light={StaticResource SECONDARY_COLOR_LIGHT}}" />
  </Style>

</ResourceDictionary>