<?xml version="1.0" encoding="utf-8"?>

<ContentView
  x:Class="PlanShare.App.Views.Components.Inputs.EntryAndLabelPasswordComponent"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
  x:Name="this">
  <VerticalStackLayout BindingContext="{x:Reference this}">
    <Label Style="{StaticResource TitleForEntry}" Text="{Binding Title}" />

    <Grid ColumnDefinitions="*, 40">
      <!--  * = Irá preencher a largura máxima, 40 = espaço da segunda coluna  -->
      <Entry
        x:Name="PasswordEntry"
        Grid.Column="0"
        IsPassword="True"
        Placeholder="Mínimo de 8 caracteres"
        ReturnType="Done" 
        Text="{Binding TextValue}"/>

      <Grid
        Grid.Column="1"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="40">
        <Grid.GestureRecognizers>
          <TapGestureRecognizer Tapped="ShowHidePassword" />
        </Grid.GestureRecognizers>
        <Image x:Name="ImageEye" Source="icon_eye_hidden.png">
          <Image.Behaviors>
            <toolkit:IconTintColorBehavior
              TintColor="{AppThemeBinding 
                Light={StaticResource PRIMARY_COLOR_LIGHT}, 
                Dark={StaticResource PRIMARY_COLOR_DARK}}" />
          </Image.Behaviors>
        </Image>
      </Grid>
    </Grid>
  </VerticalStackLayout>
</ContentView>