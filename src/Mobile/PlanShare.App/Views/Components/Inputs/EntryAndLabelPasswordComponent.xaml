<?xml version="1.0" encoding="utf-8"?>

<ContentView
  x:Class="PlanShare.App.Views.Components.Inputs.EntryAndLabelPasswordComponent"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Name="this">
  <VerticalStackLayout BindingContext="{x:Reference this}">
    <Label
      Style="{StaticResource TitleForEntry}"
      Text="{Binding Title}" />
    
    <Grid ColumnDefinitions="*, 40">
    <!--  * = Irá preencher a largura máxima, 40 = espaço da segunda coluna  -->
      <Entry
        x:Name="PasswordEntry"
        Grid.Column="0"
        IsPassword="True"
        Placeholder="Mínimo de 8 caracteres"
        PlaceholderColor="#808080"
        TextColor="Black" />

      <Grid
        Grid.Column="1"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="40">
        <Grid.GestureRecognizers>
          <TapGestureRecognizer Tapped="ShowHidePassword" />
        </Grid.GestureRecognizers>
        <Image x:Name="ImageEye" Source="icon_eye_hidden.png" />
      </Grid>
    </Grid>
  </VerticalStackLayout>
</ContentView>